<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="@dimen/cameraui_settingschild_height"
    android:id="@+id/simplevalueframe"
    android:minWidth="@dimen/cameraui_settingschild_width"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/uiSettingsBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/simplevaluetext"
        android:textColor="@color/uiSettingsTextColor"
        android:textSize="@dimen/cameraui_infooverlay_textsize"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:maxLines="3"
        android:nestedScrollingEnabled="false"/>

</FrameLayout>